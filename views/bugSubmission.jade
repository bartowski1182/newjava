extends layout

block content
  div
    form(method='post',action='')
        label(for='bugType') Bug Type:
        br/
        select(name = 'bugs')
            option(value = "crash") Crash
            option(value = "slowdown") Slow down
            option(value = "brokenfeature") Broken Feature
            option(value = "bootloop") Boot loop
        br/   
        label(for='email') Email:
        br/
        input(type='text',name='email',id='email')
        br/
        label(for='comment') Comment:
        br/
        textarea(rows = '3', cols = '20', name='comments', wrap='hard', placeholder = 'Insert bug report here')
        br/
        input(type='submit',name='submit',value='Submit').submit-button
    br/
    a(href='http://localhost:3000/') Return